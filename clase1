print("Digite un numero entero y positivo")
Numero=int(input())
i=0
suma=0
while Numero!=i:
    i=i+1
    suma=suma+i
print("La sumatori de su rango es:"+str(suma))



print("Digite un numero entero y positivo")
Numero=int(input())
i=0
sumapar=0
sumaimpar=0
while Numero!=i:
    i=i+1
    if i % 2==0:
        sumapar=sumapar+i
    else:
        sumaimpar=sumaimpar+i
print("La sumatori de los numeros impares es:"+str(sumaimpar))            
print("La sumatori de los numeros pares es:"+str(sumapar))  
